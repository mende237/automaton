<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="180.0" maxWidth="300.0" minHeight="180.0" minWidth="300.0" prefHeight="180.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.automate.controller.PopupController">
   <top>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" styleClass="dialog-header">
         <children>
            <Label text="Select State Type">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <ComboBox fx:id="stateTypeComboBox" prefWidth="200.0" promptText="Select a state type" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="btnCancel" onAction="#handleCancelButtonClicked" styleClass="secondary-button" text="Cancel" />
            <Button fx:id="btnConfirm" onAction="#handleConfirmButtonClicked" styleClass="primary-button" text="Confirm" />
         </children>
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
